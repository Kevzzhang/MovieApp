<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
    </style>

    <style name="MovieTitleLargeBold">
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="android:textColor">@color/colorDarkGrey</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MovieTitleMediumBold">
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="android:textColor">@color/colorDarkGrey</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextDetailSmall">
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textColor">@color/color_text_dark</item>
    </style>

    <style name="TextDetailCommentSmall">
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="FontTitleBoldBlack16sp">
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textColor">@color/colorDarkGrey</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RatingTextMedium">
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textColor">@color/color_text_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextMedium14sp">
        <item name="android:textSize">@dimen/_14sp</item>
    </style>


    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/color_text_light</item>
        <item name="colorControlActivated">@color/orange</item>
        <item name="android:minWidth">25dip</item>
        <item name="android:minHeight">25dip</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

</resources>
